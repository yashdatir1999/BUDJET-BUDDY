<script>
    var flag = 0
document.querySelector(".menu").addEventListener("click" , function(){
    if(flag == 0 ){
        document.querySelector(".menu").innerHTML = `<i class="ri-close-fill"></i>`
        document.querySelector(".res-nav").style.top = "0"
        flag=1
    }else{
        document.querySelector(".menu").innerHTML = `<i class="ri-menu-4-line"></i>`
        document.querySelector(".res-nav").style.top = "-50%"
        flag=0
    }
})

</script>